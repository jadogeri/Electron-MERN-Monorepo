{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "author": "Joseph Adogeri",
  "description": "Electron app serves as template to build apps for desktop using typescript",
  "homepage": ".",
  "main": "build/electron/main.js",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "ajv": "^8.17.1",
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "express": "^5.1.0",
    "mongodb-memory-server": "^10.3.0",
    "mongoose": "^8.19.3",
    "nodemon": "^3.1.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "react-scripts": "5.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "backend": "ts-node-dev src/server/src/index",
    "electron": "electron .",
    "copy-assets": "copyfiles -u 1 src/database/mongodb/**/* build/src",
    "tsc": "npm run build && tsc -p electron && tsc -p src && electron .",
    "electron:start": "react-scripts build && npm run electron",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "npm run copy-assets  && concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^23.3.13",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
